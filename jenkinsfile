pipeline {
    agent any
    
    environment {
        PROJECT_NAME = "Neptun"
        OWNER_NAME = "Andrey Gurenich"
    }
        
    stages {
        stage('1-Build') {
            steps {
                echo 'Start of Stage Build'
                echo 'Building...'
                sh   'ls -la'
                echo "Hello ${OWNER_NAME}"
                echo "Project name is: ${PROJECT_NAME}"
                echo 'End of Stage Build'
            }
        }
        stage('2-Test') {
            steps {
                echo 'Start of Stage Test'
                echo 'Testing...'
                sh '''
                    echo "line1"
                    echo "line2"
                    
                '''
                echo 'End of Stage Build'
            }
        }
        stage('3-Deploy') {
            steps {
                echo 'Start of stage Deploy'
                echo 'Deploying...'
                echo 'End of stage Deploy'
            }
        }
        stage('4-Celebrate') {
            steps {
                echo 'Congratulation!!'
            }
        }
    }
}
